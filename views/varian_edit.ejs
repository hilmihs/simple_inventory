    <main class="d-flex flex-nowrap" style="overflow: scroll;">
        <%- include('partials/menu') %>

            <div class="  b-example-vr"></div>
            <div class="container">
                <div class="container">
                    <h1 style="margin-left: 250px;">Simple Inventory</h1>
                </div>

                <h2>Edit Supplier</h2>
                <form action="" method="post" encType="multipart/form-data">
                    <% rows.forEach((item)=> { %>
                        <div class="col-25">
                            <label for="barang">ID / Barcode</label>
                        </div>
                        <div class="col-75">
                        <input type="text" name="custom_input" id="custom_input" placeholder="ID"
                            value="<%= item.id_varian %>">
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="nama">Nama Varian</label>
                            </div>
                            <div class="col-75">
                                <input type="text" id="nama" name="nama" placeholder="Nama"
                                    value="<%= item.nama_varian %>" required><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="barang">Barang</label>
                            </div>
                            <div class="col-75">
                                <select class="arrows" name="barang" id="barang" value="<%= item.id_barang %>">
                                    <option disabled>Pilih Barang</option>
                                    <% barang.forEach((isi)=> { %>
                                        <option value="<%= isi.id_barang %>" <%= item.id_barang == isi.id_barang ? 'selected' : '' %> >
                                            <%= isi.id_barang %> - <%= isi.nama_barang %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="stok">Stok</label>
                            </div>
                            <div class="col-75">
                                <input type="number" id="stok" name="stok" placeholder="Stok"
                                    value="<%= item.stok_varian %>"><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="harga">Harga</label>
                            </div>
                            <div class="col-75">
                                <input type="number" step="any" id="harga" name="harga" placeholder="Harga"
                                    value="<%= item.harga_varian %>"><br>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="satuan">Satuan</label>
                            </div>
                            <div class="col-75">
                                <select class="arrows" name="satuan" id="satuan" value="<%= item.id_satuan %>">
                                    <option disabled >Pilih satuan</option>
                                    <% satuan.forEach((isi) => { %>
                                        <option value="<%= isi.id_satuan %>" <%= item.id_satuan == isi.id_satuan ? 'selected' : '' %>><%= isi.id_satuan %> - <%= isi.nama_satuan %></option>
                                        <% }) %>

                                </select>
                            </div>
                            <div class="row">
                                <div class="col-25">
                                    <label for="gudang">Gudang</label>
                                </div>
                                <div class="col-75">
                                    <select class="arrows" name="gudang" id="gudang" value="<%= item.id_gudang %>"
                                        style="width: 98%; margin-right: 5px;">
                                        <option disabled>Pilih Gudang</option>
                                        <% gudang.forEach((isi) => { %>
                                            <option value="<%= isi.id_gudang %>" <%= item.id_gudang == isi.id_gudang ? 'selected' : '' %>><%= isi.id_gudang %> - <%= isi.nama_gudang %></option>
                                            <% }) %>
                                    </select>
                                </div>
                                <div class="row">
                                    <div class="col-25">
                                        Gambar Tersimpan
                                    </div>
                                    <div class="col-75">
                                        <img src="/gambar/<%= item.gambar_varian %>" alt="gambar_tersimpan" style="width: 25%">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-25">
                                        <label for="gambar">Ganti gambar (jika perlu)</label>
                                    </div>
                                    <div class="col-75">
                                        <input type="file" name="gambar" id="gambar" class="form-control"
                                             style="width: 101%; margin-right: 5px;">
                                    </div>
                                    <input type="hidden" name="saved_gambar" id="saved_gambar" value="<%= item.gambar_varian %>">
                                    <div class="container" style="margin-top: 25px;">
                                        <% }) %>
                                            <button type="submit" class="btn btn-success" style="margin-right: 20px"><i
                                                    class="bi bi-save" style="margin-right: 10px;"></i>Update</button>
                </form>
                <a href="/varian"><button type="button" class="btn btn-info"
                        style="margin-right: 20px; float: right; clear: none;"><i class="bi bi-arrow-up-left-square"
                            style="margin-right: 10px;"></i>Return to Varian</button></a>
            </div>
            </div>
    </main>

    <%- include('partials/script-footer') %>
