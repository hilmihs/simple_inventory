    <main class="d-flex flex-nowrap" style="overflow: scroll;">
        <%- include('partials/menu') %>

            <div class="  b-example-vr"></div>
            <div class="container">
                <div class="container">
                    <h1 style="margin-left: 250px;">Simple Inventory</h1>
                </div>

                <h2>Edit Data</h2>
                <br>
                <form action="" method="post">
                    <% rows.forEach((isi) => { %>
                       
                    <label><input type="radio" name="generate" id="generate" value="on" /> Auto Generate
                        Invoice</label><br>
                    <label><input type="radio" name="generate" id="custom" value="off"/> Custom Invoice</label>
                    <input type="text" name="custom_input" value="<%= isi.no_invoice_jual %>" id="custom_input" placeholder="Type Invoice here" style="width: 96%;" readonly>
                    
                    <label><input type="radio" name="tanggal" id="date_now" value="on" /> Auto Generate Date (Today)</label><br>
                    <label><input type="radio" name="tanggal" id="date_custom" value="off"/>Custom Date</label>
                    <input type="text" name="custom_date" id="custom_date" value="<%= isi.tanggal_penjualan %>" placeholder="Choose Date.." readonly
                    onfocus="(this.type='date')"
                    onblur="(this.type='text')" style="width: 96%;" >
                    <input type="hidden" name="id" id="id" value="<%= isi.id_transaksi_jual %>">
                    <input type="hidden" name="default_input" id="default_input" value="<%= isi.no_invoice_jual %>">
                    <input type="hidden" name="default_date" id="default_date" value="<%= isi.tanggal_penjualan %>">
                    <div class="row">
                        <div class="col-25">
                            <label for="supplier">Supplier</label>
                        </div>
                        <div class="col-75">
                            <select class="arrows" name="supplier" id="supplier" value="">
                                <option readonly selected>Pilih Supplier</option>
                                <% supplier.forEach((item) => { %>
                                <option value="<%= item.id_supplier %>" <%= isi.id_supplier == item.id_supplier ? 'selected' : '' %>><%= item.id_supplier %> - <%= item.nama_supplier %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="barang">Barang</label>
                        </div>
                        <div class="col-75">
                            <select class="arrows" name="barang" id="barang" value="">
                                <option disabled selected>Pilih Barang</option>
                                <% varian.forEach((item) => { %>
                                <option value="<%= item.id_barang %>" <%= isi.id_varian == item.id_barang ? 'selected' : '' %>><%= item.id_barang %> - <%= item.nama_varian %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="satuan">Satuan</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="satuan" name="satuan" placeholder="Satuan" value="<%= isi.nama_satuan %>" readonly><br>
                            
                        </div>
                       </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="gudang">Gudang</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="gudang" name="gudang" placeholder="Gudang" value="<%= isi.nama_gudang %>" readonly><br>
                        </div>
                        </div>
                        <div class="row">
                            <div class="col-25">
                                <label for="harga">Harga</label>
                            </div>
                            <div class="col-75">
                                <input type="number" step="any" id="harga" name="harga" placeholder="Harga" value="<%= isi.harga_varian %>" readonly><br>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="stok">Stok</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="stok" name="stok" placeholder="Stok" value="<%= isi.stok_varian %>" readonly><br>
                        </div>
                    </div>
                    <label><input type="radio" name="change" id="default_qty" value="on" /> Stok Masuk Tetap</label><br>
                    <label><input type="radio" name="change" id="custom_qty" value="off"/> Ubah Stok Masuk</label>
                    <div class="row">
                        <div class="col-25">
                            <label for="kurang_stok" >Tambah Stok Masuk</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="kurang_stok" name="kurang_stok" placeholder="Tambah Stok" value="<%= isi.qty %>" readonly><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="total_stok">Total Stok</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="total_stok" name="total_stok" placeholder="Total Stok" value="<%= isi.stok_varian %>" readonly><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="total_harga">Total Harga</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="total_harga" name="total_harga" placeholder="Total Harga" value="<%= isi.total_harga_jual %>" readonly><br>
                        </div>
                    </div>
                    <% }) %>
                    <div class="container" style="margin-top: 25px;">

                        <button type="submit" class="btn btn-success" style="margin-right: 20px"><i class="bi bi-save"
                                style="margin-right: 10px;"></i>Submit</button>
                </form>
                <a href="/barang_keluar"><button type="button" class="btn btn-info"
                        style="margin-right: 20px; float: right; clear: none;"><i class="bi bi-arrow-up-left-square"
                            style="margin-right: 10px;"></i>Return to Barang Keluar</button></a>
            </div>
            </div>
    </main>

    <%- include('partials/script-footer') %>

        <script>
            $(function () {
                $("#barang").change(function () {
                    let display = $("select[name=barang]").val();
                    $.ajax({
                    method: "GET",
                    url: `/varian/api`,
                    dataType: "json"
                })
                    .done(function (response) {
                        response.forEach((item) => {
                            if (item.id_barang == display) {
                                $('#satuan').val(item.id_satuan)
                                $('#gudang').val(item.nama_gudang)
                                $('#harga').val(item.harga_varian)
                                $('#stok').val(item.stok_varian)
                            }
                        })
                       
                    }).fail(function (err) {
                        alert(`gagal pake jquery, ${err}`)
                    })
                    
                })
            })
            $("#kurang_stok").keyup(function () {
                    let tambah = $(this).val()
                    let display = $("select[name=barang]").val();
                    $.ajax({
                    method: "GET",
                    url: `/varian/api/${display}`,
                    dataType: "json"
                })
                    .done(function (response) {
                        console.log(response)
                        response.forEach((item) => {
                        let total = parseInt(item.stok_varian) - parseInt(tambah);
                        $('#total_stok').val(total)
                        $('#total_harga').val(parseInt(tambah) * parseInt(item.harga_varian))
                    }).fail(function (err) {
                        alert('err')
                    })
                })
                })
            document.getElementsByTagName('input')[0].addEventListener('click', function () {
                document.getElementById('custom_input').setAttribute('readonly', true);
            });

            document.getElementsByTagName('input')[1].addEventListener('click', function () {
                document.getElementById('custom_input').removeAttribute('readonly');
            });
            document.getElementsByTagName('input')[3].addEventListener('click', function () {
                $('#custom_date').val(new Date(Date.now()))
                document.getElementById('custom_date').setAttribute('readonly', true);
            });

            document.getElementsByTagName('input')[4].addEventListener('click', function () {
                document.getElementById('custom_date').removeAttribute('readonly');
            });
            document.getElementsByTagName('input')[13].addEventListener('click', function () {
                document.getElementById('kurang_stok').setAttribute('readonly', true);
            });

            document.getElementsByTagName('input')[14].addEventListener('click', function () {
                document.getElementById('kurang_stok').removeAttribute('readonly');
            });
        </script>
        <%- include('partials/footer') %>