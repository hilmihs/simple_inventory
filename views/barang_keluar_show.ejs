    <main class="d-flex flex-nowrap" style="overflow: scroll;">
        <%- include('partials/menu') %>

            <div class="  b-example-vr"></div>
            <div class="container">
                <div class="container">
                    <h1 style="margin-left: 250px;">Simple Inventory</h1>
                </div>

                <h2>Add Data</h2>
                <br>
                <div class="card" style="padding: 10px;">
                    <label for="custom_input">Invoice</label>
                    <input type="text" name="custom_input" id="custom_input" value="<%= penjualan.no_invoice_jual %>"
                        readonly>
                    <label for="custom_date">Date</label>
                    <input type="text" name="custom_date" id="custom_date"
                        value="<%= moment(penjualan.tanggal_penjualan).format('DD MMMM YYYY') %>" readonly>

                </div>
                <form id="detail-form" action="" method="post">
                    <div class="row">
                        <div class="col-25">
                            <label for="supplier">Supplier</label>
                        </div>
                        <div class="col-75">
                            <select class="arrows" name="supplier" id="supplier" value="">
                                <option disabled selected>Pilih Supplier</option>
                                <% supplier.forEach((item)=> { %>
                                    <option value="<%= item.id_supplier %>">
                                        <%= item.id_supplier %> - <%= item.nama_supplier %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="barang">Barang</label>
                        </div>
                        <div class="col-75">
                            <select class="arrows" name="barang" id="barang" value="">
                                <option disabled selected>Pilih Barang</option>
                                <% varian.forEach((item)=> { %>
                                    <option value="<%= item.id_barang %>">
                                        <%= item.id_barang %> - <%= item.nama_varian %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="satuan">Satuan</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="satuan" name="satuan" placeholder="Satuan" value="" disabled><br>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="gudang">Gudang</label>
                        </div>
                        <div class="col-75">
                            <input type="text" id="gudang" name="gudang" placeholder="Gudang" value="" readonly><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="harga_jual">Harga Jual</label>
                        </div>
                        <div class="col-75">
                            <input type="number" step="any" id="harga_jual" name="harga_jual" placeholder="Harga Jual"
                                value="" readonly><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="stok">Stok</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="stok" name="stok" placeholder="Stok" value="" readonly><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="kurang_stok">Stok Keluar (-)</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="kurang_stok" name="kurang_stok" placeholder="Stok Keluar"
                                value=""><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="total_stok">Total Stok</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="total_stok" name="total_stok" placeholder="Total Stok" value=""
                                readonly><br>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-25">
                            <label for="total_harga">Total Harga Barang</label>
                        </div>
                        <div class="col-75">
                            <input type="number" id="total_harga" name="total_harga" placeholder="Total Harga" value=""
                                readonly><br>
                        </div>
                    </div>
                    <div class="container" style="margin-top: 25px;">

                        <button type="submit" class="btn btn-success" style="margin-right: 20px"><i class="bi bi-save"
                                style="margin-right: 10px;"></i>Add Item</button>
                </form>
                <table id="detail-table" class="table table-striped">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Kode Barang</th>
                            <th>Nama Barang</th>
                            <th>Qty</th>
                            <th>Harga Jual</th>
                            <th>Total Harga Barang</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-25">
                        <label for="total_harga_invoice">Total Harga</label>
                    </div>
                    <div class="col-75">
                        <input type="number" id="total_harga_invoice" name="total_harga_invoice" placeholder="Total Harga" value="<%= penjualan.total_harga_jual %>"
                            readonly><br>
                    </div>
                </div>
                <br>
                <a href="/barang_keluar"><button type="button" class="btn btn-info"
                        style="margin-right: 20px; float: right; clear: none;"><i class="bi bi-arrow-up-left-square"
                            style="margin-right: 10px;"></i>Return to Barang Keluar</button></a>
            </div>
            </div>
    </main>

    <%- include('partials/script-footer') %>

        <script>
            let no_invoice = '<%= penjualan.no_invoice_jual %>';
            let gudang = $('#gudang').val()
            $(function () {
                readDetails()
                $("#barang").change(function () {
                    let display = $("select[name=barang]").val();
                    $.ajax({
                        method: "GET",
                        url: `/varian/api`,
                        dataType: "json"
                    })
                        .done(function (response) {
                            response.forEach((item) => {
                                if (item.id_barang == display) {
                                    $('#satuan').val(item.id_satuan)
                                    $('#gudang').val(item.nama_gudang)
                                    $('#harga_jual').val(item.harga_jual)
                                    $('#stok').val(item.stok_varian)
                                }
                            })

                        }).fail(function (err) {
                            alert(`gagal pake jquery, ${err}`)
                        })

                })
                $('#detail-form').submit(function (e) {
                    e.preventDefault();
                    const kode_barang = $('select[name=barang]').val()
                    const qty = $('#kurang_stok').val()
                    $.post('/barang_keluar/additem', { no_invoice, kode_barang, qty }).done(function (data) {
                        readDetails()
                        console.log(data)
                        $('#total_harga_invoice').val(currencyFormatter.format(data.total_harga))
                    })
                })
            })
            $("#kurang_stok").keyup(function () {
                let kurang = $(this).val()
                let display = $("select[name=barang]").val();
                $.ajax({
                    method: "GET",
                    url: `/varian/api/${display}`,
                    dataType: "json"
                })
                    .done(function (response) {
                        console.log(response)
                        response.forEach((item) => {
                            let total = parseInt(item.stok_varian) - parseInt(kurang);
                            $('#total_stok').val(total)
                            $('#total_harga').val(parseInt(kurang) * parseInt(item.harga_varian))
                        }).fail(function (err) {
                            alert('err', err)
                        })
                    })
            })

            const readDetails = () => {
            $.get(`/barang_keluar/details/${no_invoice}`).done(function (data) {
                let html = ''
                data.forEach((item, index) => {
                    html += `
                    <tr>
                        <td>
                            ${index + 1}
                        </td>
                        <td>
                            ${item.id_varian}
                        </td>
                        <td>
                            ${item.nama_barang}
                        </td>
                        <td class="right-position">
                            ${item.qty}
                        </td>
                        <td class="right-position">
                            ${currencyFormatter.format(item.harga_jual)}
                        </td>
                        <td class="right-position">
                            ${currencyFormatter.format(item.total_harga)}
                        </td>
                        
                    </tr>
                    `
                })
                $('#detail-table tbody').html(html)
            })
        }

            document.getElementsByTagName('input')[0].addEventListener('click', function () {
                document.getElementById('custom_input').setAttribute('disabled', true);
            });

            document.getElementsByTagName('input')[1].addEventListener('click', function () {
                document.getElementById('custom_input').removeAttribute('disabled');
            });
            document.getElementsByTagName('input')[3].addEventListener('click', function () {
                $('#custom_date').val(new Date(Date.now()))
                document.getElementById('custom_date').setAttribute('disabled', true);
            });

            document.getElementsByTagName('input')[4].addEventListener('click', function () {
                document.getElementById('custom_date').removeAttribute('disabled');
            });

        </script>
        <%- include('partials/footer') %>