        <script>
            let no_invoice = '<%= rows.no_invoice_beli %>'
            let id_detail = '<%= rows.id_detail %>'
            let qty = '<%= rows.qty %>'
            console.log($('#detail').val())
            $(function () {
                readDetails()
                $("#barang").on('propertychange input',function () {
                    let display = $("select[name=barang]").val();
                    $.ajax({
                    method: "GET",
                    url: `/varian/api`,
                    dataType: "json"
                })
                    .done(function (response) {
                        response.forEach((item) => {
                            if (item.id_barang == display) {
                                $('#satuan').val(item.id_satuan)
                                $('#gudang').val(item.nama_gudang)
                                $('#harga_jual').val(item.harga_jual)
                                $('#stok').val(item.stok_varian)
                            }
                        })
                       
                    }).fail(function (err) {
                        alert(`gagal pake jquery, ${err}`)
                    })
                    
                })
                $('#detail-form').submit(function (e) {
                    e.preventDefault();
                    const kode_barang = $('select[name=barang]').val()
                    const qty = $('#kurang_stok').val()
                    const id_detail = $('#detail').val()
                    $.post('/barang_masuk/edititem', { id_detail, kode_barang, qty }).done(function (data) {
                        readDetails()
                        console.log(data)
                        $('#total_harga_invoice').val(data.total_harga_beli)
                    })
                })
            })
            $("#kurang_stok").on('propertychange input',function () {
                    let tambah = $(this).val()
                    let display = $("select[name=barang]").val();
                    $.ajax({
                    method: "GET",
                    url: `/varian/api/${display}`,
                    dataType: "json"
                })
                    .done(function (response) {
                        response.forEach((item) => {
                        let total = parseInt(item.stok_varian) - parseInt(qty) + parseInt(tambah);
                        $('#total_stok').val(total)
                        $('#total_harga').val(parseInt(tambah) * parseInt(item.harga_beli))
                    }).fail(function (err) {
                        alert('err')
                    })
                })
                })
           
            document.getElementsByTagName('input')[0].addEventListener('click', function () {
                document.getElementById('custom_input').setAttribute('readonly', true);
            });

            document.getElementsByTagName('input')[1].addEventListener('click', function () {
                document.getElementById('custom_input').removeAttribute('readonly');
            });
            document.getElementsByTagName('input')[3].addEventListener('click', function () {
                $('#custom_date').val(new Date(Date.now()))
                document.getElementById('custom_date').setAttribute('readonly', true);
            });

            document.getElementsByTagName('input')[4].addEventListener('click', function () {
                document.getElementById('custom_date').removeAttribute('readonly');
            });
            const readDetails = () => {
            $.get(`/barang_masuk/details/${no_invoice}`).done(function (data) {
                let html = ''
                data.forEach((item, index) => {
                    html += `
                    <tr>
                        <td>
                            ${index + 1}
                        </td>
                        <td>
                            ${item.id_varian}
                        </td>
                        <td>
                            ${item.nama_barang}
                        </td>
                        <td class="right-position">
                            ${item.qty}
                        </td>
                        <td class="right-position">
                            ${currencyFormatter.format(item.harga_beli)}
                        </td>
                        <td class="right-position">
                            ${currencyFormatter.format(item.total_harga)}
                        </td>
                        <td>
                        <button type="button" onclick="infoData('${item.id_detail}')" class="btn btn-info btn-sm" style="margin-right: 15px;">
                            <i class="bi bi-pencil-square" style="margin-right: 10px;"></i>Edit</button>
                                        </td>
                    </tr>
                    `
                })
                $('#detail-table tbody').html(html)
            })
            
        }
        const infoData = (id) => {
                $.ajax({
                    method: "GET",
                    url: `/barang_masuk/edit_detail/${id}`,
                    dataType: "json"
                })
                    .done(function (response) {
                       
                        $('#supplier').val(response.id_supplier)
                        $('#satuan').val(response.nama_satuan)
                        $('#gudang').val(response.nama_gudang)
                        $('#harga_beli').val(response.harga_beli)
                        $('#stok').val(response.stok_varian)
                        $('#total_stok').val(response.stok_varian - response.qty)
                        $('#total_harga').val(response.total_harga_beli)
                        $('#barang').val(response.id_barang)
                        $('#kurang_stok').val(response.qty)
                        $('#detail').val(response.id_detail)
                      
                    }).fail(function (err) {
                        alert(`gagal pake jquery, ${err}`)
                    })

                $(document).ready(function () {

                })
            }
        </script>
        
