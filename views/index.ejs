  <script>
    $(document).ready(function () {
      readBeli()
      readVarian()

    })

    const readBeli = () => {
            $.get(`/showbeli`).done(function (data) {
              console.log(data)
                let html = ''
                data.forEach((item, index) => {
                    html += `
                    <tr>
              <th scope="row">
                 ${index + 1} 
              </th>
              <td>
                 ${item.no_invoice_beli} 
              </td>
              <td>
                 ${moment(item.tanggal_pembelian).format('DD MMMM YYYY')} 
              </td>
              <td>
                 ${item.nama_supplier }
              </td>
              <td>
                 ${item.nama_barang }
              </td>
              <td>
                 ${item.total_harga_beli }
              </td>
              <td>
                 ${item.nama_gudang }
              </td>
              <td>
                 ${item.qty }
              </td>
            </tr>
                    `
                })
                $('#tabel_masuk tbody').html(html)
            })
        }
        const readVarian = () => {
            $.get(`/showvarian`).done(function (data) {
                let html = ''
                data.forEach((item, index) => {
                    html += `
                    
                      <tr>
              <th scope="row">
                ${ index + 1 }
              </th>
              <td>
                ${ item.id_barang }
              </td>
              <td>
                ${ item.nama_varian }
              </td>
              <td>
                ${ item.stok_varian }
              </td>
              <td>
                ${ item.harga_varian }
              </td>
              <td>
                ${ item.id_satuan }
              </td>
              <td>
                ${ item.id_gudang }
              </td>
            </tr>
                    `
                })
                $('#tabel_varian tbody').html(html)
            })
        }
  </script>


